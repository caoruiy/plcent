                    | 主演：
                    span(ng-repeat="cast in movie.casts") {{cast.name}}&nbsp;&nbsp;
      ul(
      uib-pagination 
      boundary-links="true" 
      boundary-link-numbers = "true" 
      rotate = "true" 
      force-ellipses = "true"
      max-size = "4" 
      total-items="pageOption.totalItems" 
      items-per-page="pageOption.itemsPerPage" 
      ng-model="pageOption.currentPage" 
      class="pagination-sm" 
      previous-text="<" 
      next-text=">" 
      first-text="<<" 
      last-text=">>" 
      ng-change = "changeThePage()" 
      )
